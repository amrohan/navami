@using Microsoft.FluentUI.AspNetCore.Components
@inherits LayoutComponentBase


<div class="page">

    <div>
        <AuthorizeView>
            <Authorized>
                <NavMenu />
            </Authorized>
        </AuthorizeView>
    </div>

    <main>
        <div class="top-row px-4" style="background-color: transparent;border:none">
            <AuthorizeView>
                <Authorized>
                    <navami.Components.Account.Profile />
                </Authorized>
            </AuthorizeView>


        </div>
        <article class="content px-4">
            <FluentMessageBarProvider Section="MESSAGES_TOP" @rendermode="InteractiveServer" />
            @Body
        </article>
        <FluentToastProvider @rendermode="InteractiveServer" Timeout="4000" />
        <FluentDialogProvider />
        <FluentTooltipProvider />
        <FluentMenuProvider />
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
