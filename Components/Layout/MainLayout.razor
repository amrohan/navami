@using Microsoft.FluentUI.AspNetCore.Components
@inherits LayoutComponentBase


<div class="page">

    <div>
        <AuthorizeView>
            <Authorized>
                <NavMenu />
            </Authorized>
        </AuthorizeView>
    </div>

    <main>
        <div class="top-row px-4" style="background-color: transparent;border:none">
            <AuthorizeView>
                <NotAuthorized>
                    <NavLink class="nav-link" href="login" Match="NavLinkMatch.All">
                        <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Login
                    </NavLink>
                </NotAuthorized>
                <Authorized>
                    <NavLink class="nav-link" href="logout" Match="NavLinkMatch.All">
                        <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Logout
                    </NavLink>
                </Authorized>
            </AuthorizeView>

        </div>
        <article class="content px-4">
            @Body
        </article>
        <FluentToastProvider @rendermode="InteractiveServer" Timeout="4000" />
        <FluentDialogProvider />
        <FluentTooltipProvider />
        <FluentMessageBarProvider />
        <FluentMenuProvider />
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
